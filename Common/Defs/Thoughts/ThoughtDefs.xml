<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- child labor thoughts -->
    <!-- Encouraged -->
    <ThoughtDef>
        <defName>ChildLabor_Encouraged_ChildVatModeNotPlay</defName>
        <workerClass>GrowthVatsOverclocked.Thoughts.ThoughtWorker_Precept_ChildVatModeNotPlay</workerClass>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
        <stackLimit>3</stackLimit>
        <!--<minExpectation>Moderate</minExpectation>-->
        <stages>
            <li>
                <label>vat children using enhanced learning suites</label>
                <description>Our children are growing very quickly into productive members of the colony.</description>
                <baseMoodEffect>+2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ChildLabor_Encouraged_ChildVatModePlay</defName>
        <workerClass>GrowthVatsOverclocked.Thoughts.ThoughtWorker_Precept_ChildVatModePlay</workerClass>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
        <stackLimit>3</stackLimit>
        <!--<minExpectation>Moderate</minExpectation>-->
        <stages>
            <li>
                <label>vat children using play suite</label>
                <description>Our children are wasting their limited vat growth time playing instead of learning how to help the colony.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ChildLabor_Encouraged_TeenInGrowthVat</defName>
        <workerClass>GrowthVatsOverclocked.Thoughts.ThoughtWorker_Precept_TeenInGrowthVat</workerClass>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
        <stackLimit>3</stackLimit>
        <!--<minExpectation>Moderate</minExpectation>-->
        <stages>
            <li>
                <label>teenagers in growth vats</label>
                <description>Why are our teenagers in growth vats when they could be out here working?!</description>
                <baseMoodEffect>-8</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <!-- Disapproved -->
    <ThoughtDef>
        <defName>ChildLabor_Disapproved_ChildVatModeNotPlay</defName>
        <workerClass>GrowthVatsOverclocked.Thoughts.ThoughtWorker_Precept_ChildVatModeNotPlay</workerClass>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
        <stackLimit>3</stackLimit>
        <!--<minExpectation>Moderate</minExpectation>-->
        <stages>
            <li>
                <label>vat children using enhanced learning suites</label>
                <description>Our children are being grown and programmed like meat robots instead of experiencing childhood.</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>ChildLabor_Disapproved_ChildVatModePlay</defName>
        <workerClass>GrowthVatsOverclocked.Thoughts.ThoughtWorker_Precept_ChildVatModePlay</workerClass>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <doNotApplyToQuestLodgers>true</doNotApplyToQuestLodgers>
        <stackLimit>3</stackLimit>
        <!--<minExpectation>Moderate</minExpectation>-->
        <stages>
            <li>
                <label>vat children using play suite</label>
                <description>Our children's personal growth isn't being stifled even though they are growing so fast.</description>
                <baseMoodEffect>+2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>


    <!-- Other thoughts -->
    <!-- Vat-juice effect thoughts -->
    <ThoughtDef>
        <defName>VatJuiceEffectChild</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>VatJuiceEffect</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Baby, Child</developmentalStageFilter>
        <stages>
            <li>
                <label>effected by vat-juice</label>
                <description>I'm feeling the effects of vat-juice. I should probably be in a growth vat.</description>
            </li>
        </stages>
    </ThoughtDef>

    <ThoughtDef>
        <defName>VatJuiceEffectAdult</defName>
        <workerClass>ThoughtWorker_Hediff</workerClass>
        <hediff>VatJuiceEffect</hediff>
        <validWhileDespawned>true</validWhileDespawned>
        <developmentalStageFilter>Adult</developmentalStageFilter>
        <nullifyingHediffs>
            <li>GoJuiceHigh</li>
        </nullifyingHediffs>
        <stages>
            <li>
                <label>effected by vat-juice</label>
                <description>I'm feeling the effects of vat-juice. So much more addictive than go-juice and none of the satisfaction. Why did I do this again?</description>
                <baseMoodEffect>-2</baseMoodEffect>
            </li>
        </stages>
    </ThoughtDef>
</Defs>